                    <form action="buscar" method="get">

                        <div class="buscador_inputs">

                            <div class="buscador_ciudad">
                                <input type="text" name="ciudad">
                            </div>

                            <div class="buscador_profesional">
                                <input type="text" name="profesionales">
                            </div>

                            <div class="buscador_submit">

